{% extends "SuluCommunityBundle::master.html.twig" %}

{% block content %}
    {% if app.request.get('send') == 'true' %}
        <script type="text/javascript">
			window.location = '../login';
		</script>
    {% else %}
        {% if form %}
			<h1> Enter New Password </h1>
            {{ form(form) }}
        {% else %}
            <h1> Error </h1>
			<p> Your Reset Token Was Invalid </p>
        {% endif %}
    {% endif %}
{% endblock %}
