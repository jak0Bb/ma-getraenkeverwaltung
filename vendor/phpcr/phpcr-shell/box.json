{
    "alias": "phpcrsh.phar",
    "chmod": "0755",
    "directories": ["src"],
    "files": [
        "LICENSE"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": [
                "tests", 
                "behat", 
                "Tests", 
                "phpspec", 
                "mockery", 
                "phpunit"
            ],
            "in": "vendor"
        }
    ],
    "git-version": "package_version",
    "main": "bin/phpcrsh",
    "output": "phpcrsh.phar",
    "stub": true
}
