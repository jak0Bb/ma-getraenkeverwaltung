{
    "name": "phpcr/phpcr-migrations",
    "description": "Migrations for PHPCR",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],
    "require": {
        "phpcr/phpcr": "~2.1",
        "symfony/finder": "~2.8 || ~3.4 || ~4.0",
        "symfony/console": "~2.8 || ~3.4 || ~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "jackalope/jackalope-fs": "dev-master",
        "zendframework/zendsearch": "@dev"
    },
    "autoload": {
        "psr-4": {
            "PHPCR\\Migrations\\": "lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCR\\Migrations\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {"dev-master": "1.0-dev" }
    }
}
