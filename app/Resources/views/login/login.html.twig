{% extends "SuluCommunityBundle::master.html.twig" %}

{{ render_esi(controller('SuluCommunityBundle:Login:embed', {
    '_portal' : request.portalKey|default('default_portal_key'),
    '_locale' : app.request.locale
})) }}

{% block title %}
	{{ content.title }}
{% endblock %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="form-login">
	<h1 property="title">Welcome</h1>
	<img src="/bundles/app/img/logo-login.png" />
    <form action="{{ path('sulu_community.login') }}" method="post">
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username"/>

        <input type="password" id="password" name="_password" placeholder="Password"/>
		{#
		<input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">Keep me logged in</label>
		#}
        {#
            If you want to control the URL the user
            <input type="hidden" name="_target_path" value="/" />
        #}

        <button type="submit" name="submit">Login</button>
    </form>

    <a href="{{ path('sulu_community.password_forget') }}">
        Forgot password
    </a> <br/>
</div>
{% endblock %}
